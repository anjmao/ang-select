{
  "repository": "ng-select/ng-select",
  "engines": {
    "node": ">= 6.9.0",
    "npm": ">= 3.0.0"
  },
  "scripts": {
    "clean": "rimraf out-tsc dist/* integration/node_modules/@ng-select",
    "prebuild": "yarn clean",
    "build": "ng-packagr -p ./src/package.json && yarn build:themes && yarn copy-sass",
    "build:demo": "rimraf dist && webpack --config ./scripts/webpack.dev.js --progress --profile --bail",
    "build:themes": "node-sass --output-style compressed src/themes/ -o dist/themes",
    "copy-sass": "mkdir -p dist/scss && cp src/**/*.scss dist/scss",
    "prestart": "yarn install",
    "start": "webpack-dev-server --config ./scripts/webpack.dev.js --inline --color --progress --port 8080",
    "test:watch": "karma start ./scripts/karma.conf.js --no-single-run --auto-watch",
    "test": "karma start ./scripts/karma.conf.js --single-run",
    "coveralls": "cat ./coverage/lcov/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "integration": "./integration_test.sh",
    "lint": "tslint --type-check --project ./src/tsconfig.json",
    "release": "sh ./release.sh"
  },
  "devDependencies": {
    "@angular/animations": "^8.0.1",
    "@angular/common": "^8.0.1",
    "@angular/compiler": "^8.0.1",
    "@angular/compiler-cli": "^8.0.1",
    "@angular/core": "^8.0.1",
    "@angular/forms": "^8.0.1",
    "@angular/platform-browser": "^8.0.1",
    "@angular/platform-browser-dynamic": "^8.0.1",
    "@angular/router": "^8.0.1",
    "@ng-bootstrap/ng-bootstrap": "^4.2.1",
    "@ngtools/webpack": "^8.0.3",
    "@types/jasmine": "^3.3.13",
    "@types/node": "^12.0.8",
    "@types/selenium-webdriver": "4.0.0",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^5.2.1",
    "bootstrap": "^4.3.1",
    "copy-webpack-plugin": "^5.0.3",
    "core-js": "^3.1.3",
    "coveralls": "^3.0.4",
    "css-loader": "^3.0.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "gh-pages-travis": "^1.0.4",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine-core": "^3.4.0",
    "jasmine-spec-reporter": "^4.2.1",
    "jquery": "^3.4.1",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^2.0.0",
    "karma-coverage": "^1.1.2",
    "karma-html-reporter": "^0.2.7",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^4.0.2",
    "ng-packagr": "^5.3.0",
    "ng-snippets-loader": "^0.2.5",
    "node-sass": "^4.12.0",
    "popper.js": "^1.15.0",
    "postcss-loader": "^3.0.0",
    "raw-loader": "0.5.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.1",
    "rxjs": "^6.5.2",
    "sass-loader": "^7.1.0",
    "standard-version": "^6.0.1",
    "style-loader": "^0.23.1",
    "ts-helpers": "^1.1.2",
    "tsickle": "^0.35.0",
    "tslib": "^1.10.0",
    "tslint": "^5.17.0",
    "tslint-loader": "^3.6.0",
    "typescript": "3.4.5",
    "webpack": "4.34.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.7.1",
    "zone.js": "^0.9.1",
    "@angular-devkit/schematics": "^8.0.3"
  }
}
